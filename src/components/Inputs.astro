---
const { type, name, placeholder, value, required, disabled, class:className } = Astro.props;
---

<div class="mt-2">
  <label for={name} class="text-sm">{name}</label>
  <input
    class={`${className} w-full h-10 border-2 rounded-md px-2 mt-1`}
    type={type}
    name={name}
    placeholder={placeholder}
    value={value}
    required={required}
    disabled={disabled}
  />
</div>
