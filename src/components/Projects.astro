---
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

const projects = await getCollection("projects");
---

<section class="flex flex-col justify-center items-center">
    {projects.map((project: CollectionEntry<'projects'>) => (
      <div class="w-[301px] h-[402px] border rounded-2xl flex flex-col justify-center items-center mb-4">
        <img
          class="w-full h-[154px] object-contain"
          src={project.data.image}
          alt={project.data.title}
        />
        <h2 class="flex space-y-4 flex-col px-4">
          <span class="text-2xl font-bold">{project.data.title}</span>
          <p class="text-center text-sm">
            {project.data.description}
          </p>
        </h2>
        <div class="flex flex-col items-center justify-center mt-4">
          <ul class="flex space-x-4">
            {project.data.tags.map((tag: unknown) => (
              <li>{tag}</li>
            ))}
          </ul>
        </div>
        <div class="flex justify-end w-full px-4 mt-4">
          <ul class="flex space-x-4">
            <li>
              <a href={project.data.demolink} target="_blank">Demo</a>
            </li>
            <li>
              <a href={project.data.codelink} target="_blank">CÃ³digo</a>
            </li>
          </ul>
        </div>
      </div>
    ))}
</section>