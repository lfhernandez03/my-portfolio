---
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

const projects = await getCollection("projects");
---

<section class="max-w-screen-xl mx-auto grid grid-cols-1 sm:grid-cols-2 gap-8 px-4">
  {projects.map((project: CollectionEntry<'projects'>) => (
    <div class="max-w-xs sm:max-w-sm w-full lg:w-[301px] md:w-[301px] h-auto border rounded-2xl flex flex-col justify-center items-center p-6">
      <img
        class="w-32 h-32 object-contain"
        src={project.data.image}
        alt={project.data.title}
      />
      <h2 class="text-center mt-4">
        <span class="text-2xl font-bold">{project.data.title}</span>
        <p class="text-sm mt-2">{project.data.description}</p>
      </h2>
      <div class="mt-4">
        <ul class="flex flex-wrap justify-center space-x-2">
          {project.data.tags.map((tag: unknown) => (
            <li class="">{tag}</li>
          ))}
        </ul>
      </div>
      <div class="mt-4 flex space-x-4">
        <a href={project.data.demolink} target="_blank" class="text-blue-400 underline">Demo</a>
        <a href={project.data.codelink} target="_blank" class="text-blue-400 underline">CÃ³digo</a>
      </div>
    </div>
  ))}
</section>
